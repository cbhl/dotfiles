Config { font = "-misc-fixed-*-*-*-*-10-*-*-*-*-*-*-*"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Weather "CYKF" ["-t","<station>: <skyCondition> <tempC>C (<hour>)","-L","19","-H","25","--high","red","--low","lightblue"] 36070
    		    , Run Uptime ["-t","<days><hours><minutes>","-S","True"] 610
                    , Run Memory ["-t","<total>M<usedratio>%"] 110
                    , Run Com "/home/m9chang/bin/load.sh" [] "load" 70
    		    , Run Date "%a %Y-%_d-%_m %H:%M" "date" 30
    		    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %CYKF% | %uptime% | %load% | %memory% | %date%"
       }
